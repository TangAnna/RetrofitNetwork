<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
        <item name="android:textSize">@dimen/x26</item>
        <item name="android:textColor">@color/color333</item>
        <item name="android:windowBackground">@color/colorBg</item>
        <item name="android:textColorHint">@color/color999</item>
    </style>

    <!-- Activity进入退出动画 -->
    <style name="ActivityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_out</item>
    </style>

    <!--BaseDialog的样式-->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 弹窗从下往上 -->
    <style name="DialogAnimationBottomToTop">
        <item name="android:windowEnterAnimation">@anim/anim_from_bottom_menu_in</item>
        <item name="android:windowExitAnimation">@anim/anim_from_bottom_menu_out</item>
    </style>

    <!--弹窗从上往下 -->
    <style name="DialogAnimationTopToBottom">
        <item name="android:windowEnterAnimation">@anim/anim_popup_person_show_menu_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_person_show_menu_out</item>
    </style>

    <!-- 弹窗从中间显示动画 -->
    <style name="DialogAnimationCenter">
        <item name="android:windowEnterAnimation">@anim/anim_from_center_in</item>
        <item name="android:windowExitAnimation">@anim/anim_from_center_out</item>
    </style>

    <!--侧滑的样式-->
    <style name="BaseSwipeBackLayout">
        <item name="base_edge_size">50dip</item>
        <item name="base_shadow_left">@drawable/base_shadow_left</item>
        <item name="base_shadow_right">@drawable/base_shadow_right</item>
        <item name="base_shadow_bottom">@drawable/base_shadow_bottom</item>
    </style>

    <!--ToolBar的样式（默认白色背景）-->
    <style name="ToolBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:paddingTop">@dimen/y40</item>-->
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/PopWindowStyle</item>
    </style>

    <!--主题颜色的toolbar的样式-->
    <style name="ColorToolBarStyle" parent="ToolBarStyle">
        <item name="android:background">@drawable/toolbar_color_bg</item>
        <item name="android:colorBackground">@color/transparent</item>
    </style>

    <!--PopWindow的样式-->
    <style name="PopWindowStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/color80</item>
    </style>

</resources>
