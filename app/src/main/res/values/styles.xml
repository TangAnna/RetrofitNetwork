<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--BaseDialog的样式-->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 弹窗从下往上 -->
    <style name="DialogAnimationBottomToTop">
        <item name="android:windowEnterAnimation">@anim/anim_from_bottom_menu_in</item>
        <item name="android:windowExitAnimation">@anim/anim_from_bottom_menu_out</item>
    </style>

    <!--弹窗从上往下 -->
    <style name="DialogAnimationTopToBottom">
        <item name="android:windowEnterAnimation">@anim/anim_popup_person_show_menu_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_person_show_menu_out</item>
    </style>

    <!-- 弹窗从中间显示动画 -->
    <style name="DialogAnimationCenter">
        <item name="android:windowEnterAnimation">@anim/anim_from_center_in</item>
        <item name="android:windowExitAnimation">@anim/anim_from_center_out</item>
    </style>

</resources>
